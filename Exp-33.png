#include <stdio.h>
#include <stdlib.h>
int findOptimal(int pages[], int frameCount, int frames[], int currentIndex, int totalPages) {
    int farthest = currentIndex, indexToReplace = -1;
    for (int i = 0; i < frameCount; i++) {
        int j;
        for (j = currentIndex; j < totalPages; j++) {
            if (frames[i] == pages[j]) {
                if (j > farthest) {
                    farthest = j;
                    indexToReplace = i;
                }
                break;
            }
        }
      
        if (j == totalPages) {
            return i;
        }
    }
    return (indexToReplace == -1) ? 0 : indexToReplace;
}
int main() {
    int totalPages, frameCount;
    printf("Enter total number of pages in reference string: ");
    if (scanf("%d", &totalPages) != 1 || totalPages <= 0) {
        printf("Invalid input. Total pages must be a positive integer.\n");
        return 1;
    }
    int *pages = (int *)malloc(totalPages * sizeof(int));
    if (!pages) {
        printf("Memory allocation failed.\n");
        return 1;
    }
    printf("Enter the page reference string (space-separated): ");
    for (int i = 0; i < totalPages; i++) {
        if (scanf("%d", &pages[i]) != 1) {
            printf("Invalid input. Please enter integers only.\n");
            free(pages);
            return 1;
        }
    }
    printf("Enter number of frames: ");
    if (scanf("%d", &frameCount) != 1 || frameCount <= 0) {
        printf("Invalid input. Frames must be a positive integer.\n");
        free(pages);
        return 1;
    }
    int *frames = (int *)malloc(frameCount * sizeof(int));
    if (!frames) {
        printf("Memory allocation failed.\n");
        free(pages);
        return 1;
    }
    for (int i = 0; i < frameCount; i++) {
        frames[i] = -1;
    }
    int pageFaults = 0;
    printf("\nOptimal Page Replacement Simulation:\n");
    printf("-------------------------------------------------\n");
    for (int i = 0; i < totalPages; i++) {
        int page = pages[i];
        int found = 0;
        for (int j = 0; j < frameCount; j++) {
            if (frames[j] == page) {
                found = 1;
                break;
            }
        }
        if (!found) {
            int replaceIndex = -1;
            for (int j = 0; j < frameCount; j++) {
                if (frames[j] == -1) {
                    replaceIndex = j;
                    break;
                }
            }
            if (replaceIndex == -1) {
                replaceIndex = findOptimal(pages, frameCount, frames, i + 1, totalPages);
            }
            frames[replaceIndex] = page;
            pageFaults++;
        }
        printf("Step %2d: ", i + 1);
        for (int j = 0; j < frameCount; j++) {
            if (frames[j] == -1)
                printf("[ ] ");
            else
                printf("[%d] ", frames[j]);
        }
        printf(found ? " (Hit)\n" : " (Fault)\n");
    }
    printf("-------------------------------------------------\n");
    printf("Total Page Faults: %d\n", pageFaults);
    free(pages);
    free(frames);
    return 0;
}
