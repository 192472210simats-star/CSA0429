#include <stdio.h>      
#include <stdlib.h>     
#include <fcntl.h>      
#include <unistd.h>     

#define FILE_NAME "example.txt"
#define BUFFER_SIZE 100

int main() {
    int fd;
    ssize_t bytes_written, bytes_read;
    char write_buf[] = "Hello from UNIX system calls!\n";
    char read_buf[BUFFER_SIZE];
    fd = open(FILE_NAME, O_CREAT | O_RDWR, 0644);
    if (fd == -1) {
        perror("Error opening file");
        exit(EXIT_FAILURE);
    }
    printf("File opened successfully with file descriptor: %d\n", fd);
    bytes_written = write(fd, write_buf, sizeof(write_buf) - 1);
    if (bytes_written == -1) {
        perror("Error writing to file");
        close(fd);
        exit(EXIT_FAILURE);
    }
    printf("Wrote %zd bytes to %s.\n", bytes_written, FILE_NAME);
    if (lseek(fd, 0, SEEK_SET) == -1) {
        perror("Error using lseek");
        close(fd);
        exit(EXIT_FAILURE);
    }
    bytes_read = read(fd, read_buf, BUFFER_SIZE - 1);
    if (bytes_read == -1) {
        perror("Error reading from file");
        close(fd);
        exit(EXIT_FAILURE);
    }
    read_buf[bytes_read] = '\0';  r
    printf("Read %zd bytes: \n%s", bytes_read, read_buf);
    if (close(fd) == -1) {
        perror("Error closing file");
        exit(EXIT_FAILURE);
    }
    printf("File closed successfully.\n");

    return 0;
}
