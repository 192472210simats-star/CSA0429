#include <stdio.h>
#include <stdlib.h>
#define MAX_BLOCKS 100
int main() {
    int disk[MAX_BLOCKS] = {0}; // 0 = free, 1 = allocated
    int indexBlock;
    int numDataBlocks;
    int *indexPtr;
    printf("Indexed File Allocation Simulation\n");
    printf("Disk has %d blocks (0 to %d)\n", MAX_BLOCKS, MAX_BLOCKS - 1);
    printf("Enter an index block number (0-%d): ", MAX_BLOCKS - 1);
    scanf("%d", &indexBlock);
    if (indexBlock < 0 || indexBlock >= MAX_BLOCKS) {
        printf("Invalid block number.\n");
        return 1;
    }
    if (disk[indexBlock] == 1) {
        printf("Block %d is already allocated!\n", indexBlock);
        return 1;
    }
    disk[indexBlock] = 1;
    printf("Enter number of data blocks required: ");
    scanf("%d", &numDataBlocks);
    indexPtr = (int *)malloc(numDataBlocks * sizeof(int));
    if (indexPtr == NULL) {
        printf("Memory allocation error.\n");
        return 1;
    }
    printf("Enter %d block numbers for the file:\n", numDataBlocks);
    for (int i = 0; i < numDataBlocks; i++) {
        int blockNum;
        scanf("%d", &blockNum);
        if (blockNum < 0 || blockNum >= MAX_BLOCKS) {
            printf("Invalid block %d. Try again.\n", blockNum);
            i--;
            continue;
        }
        if (disk[blockNum] == 1) {
            printf("Block %d is already allocated! Try different block.\n", blockNum);
            i--;
            continue;
        }
        disk[blockNum] = 1;
        indexPtr[i] = blockNum;
    }
    printf("\nIndex Block: %d\n", indexBlock);
    printf("Data Blocks Allocated: ");
    for (int i = 0; i < numDataBlocks; i++) {
        printf("%d ", indexPtr[i]);
    }
    printf("\n");
    free(indexPtr);
    return 0;
}
